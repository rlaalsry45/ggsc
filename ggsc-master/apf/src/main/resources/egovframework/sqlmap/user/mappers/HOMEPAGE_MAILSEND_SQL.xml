<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.homepage.com.util.service.impl.MailSendMapper">

	<!-- 회원 비밀번호 임시비밀번호로 설정 -->
	<update id="updateUserPassword" parameterType="mailSendVO">
		UPDATE GS_USER_M
			SET
				PW = #{newPw}
			WHERE
				USER_NM = #{userNm}
			AND EMAIL = #{email}
			AND MOBILE = #{tel}
	</update>
	
</mapper>